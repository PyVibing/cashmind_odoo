<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Tree view of cashmind.transfer model (start) -->
    <record id="cashmind_transfer_tree_view" model="ir.ui.view">
        <field name="name">Cashmind transfer tree view</field>
        <field name="model">cashmind.transfer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="source_account"/>
                <field name="destination_account"/>
                <field name="amount"/>
                <field name="source_currency_id"/>
                <field name="transfer_date"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="note"/>
            </list>
        </field>
    </record>
    <!-- Tree view of cashmind.transfer model (end) -->
    
    <!-- Form view of cashmind.transfer model (start) -->
    <record id="cashmind_transfer_form_view" model="ir.ui.view">
        <field name="name">Cashmind transfer form view</field>
        <field name="model">cashmind.transfer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group colspan="2">
                            <separator string="Datos de la transferencia"/>
                            <field name="name" string="Nombre*"/>
                            <field name="amount" string="Cantidad*"/>
                            <field name="transfer_date" string="Fecha de la transferencia*"/>
                            <separator string="Cuenta de origen"/>
                        </group>
                        <group colspan="2">
                            <group>
                                <field name="source_account" options="{'no_create': True}" string="Cuenta de origen*"/>
                            </group>
                            <group>
                                <field name="available_source_balance"/>
                            </group>
                        </group>
                        <group colspan="2">
                            <field name="source_currency_id" invisible="1"/>
                            <separator string="Cuenta de destino"/>
                        </group>
                        <group colspan="2">
                            <group>
                                <field name="destination_account" options="{'no_create': True}" string="Cuenta de destino*"/>
                            </group>
                            <group>
                                <field name="available_destination_balance"/>
                            </group>
                        </group>
                        <group colspan="2">
                            <field name="destination_currency_id" invisible="1"/>
                            <separator string="Otros datos"/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="note" nolabel="0"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Form view of cashmind.transfer model (end) -->
    
    <!-- Search view of cashmind.transfer model (start) -->
    <record id="cashmind_transfer_search_view" model="ir.ui.view">
        <field name="name">Cashmind transfer search view</field>
        <field name="model">cashmind.transfer</field>
        <field name="arch" type="xml">
            <search string="Buscar transferencias">
                <field name="name" string="por nombre"/>
                <field name="source_account" string="por cuenta de origen"/>
                <field name="destination_account" string="por cuenta de destino"/>
                <field name="transfer_date" string="por fecha"/>
                <field name="note" string="en las notas"/>
                <filter name="active_transfer" string="Activas" domain="[('active', '=', True)]"/>
                <filter name="inactive_transfer" string="Archivadas" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="up_to_500" string="Hasta 500.00" domain="[('amount', '&lt;=', 500)]"/>
                <filter name="over_500" string="MÃ¡s de 500.00" domain="[('amount', '>', 500)]"/>
                <group expand="1" string="Agrupar por">
                    <filter name="group_by_source_account" string="Cuenta de origen" context="{'group_by': 'source_account'}"/>
                    <filter name="group_by_destination_account" string="Cuenta de destino" context="{'group_by': 'destination_account'}"/>
                    <separator/>
                    <filter name="group_by_date" string="Fecha" context="{'group_by': 'transfer_date'}"/>
                    <separator/>
                    <filter name="group_by_currency" string="Tipo de moneda" context="{'group_by': 'source_currency_id'}"/>          
                </group>
            </search>
        </field>
    </record>
    <!-- Search view of cashmind.transfer model (end) -->

    <!-- Action of cashmind.transfer model (start) -->
    <record id="cashmind_transfer_action" model="ir.actions.act_window">
        <field name="name">TRANSFERENCIAS</field>
        <field name="res_model">cashmind.transfer</field>
        <field name="view_mode">list,form</field>
    </record>
    <!-- Action of cashmind.transfer model (start) -->
</odoo>