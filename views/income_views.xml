<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Tree view of cashmind.income model (start) -->
    <record id="cashmind_income_tree_view" model="ir.ui.view">
        <field name="name">Cashmind income tree view</field>
        <field name="model">cashmind.income</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" width="300px"/>
                <field name="account" width="150px"/>
                <field name="category" width="100px"/>
                <field name="amount" width="60px"/>
                <field name="currency_id" width="60px"/>
                <field name="date" width="100px"/>
                <field name="invoice" width="30px"/>
                <field name="active" widget="boolean_toggle" width="30px"/>
                <field name="note" width="250px"/>
            </list>
        </field>
    </record>
    <!-- Tree view of cashmind.income model (end) -->

    <!-- Form view of cashmind.income model (start) -->
    <record id="cashmind_income_form_view" model="ir.ui.view">
    <field name="name">Cashmind income form view</field>
    <field name="model">cashmind.income</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group colspan="2">
                        <separator string="Datos del ingreso"/>
                        <field name="name" string="Nombre*"/> 
                        <field name="amount" string="Cantidad*"/>
                        <field name="currency_id"/>
                        <field name="category" options="{'no_create': True}" string="Categoría*"/>
                        <field name="date" string="Fecha*"/>
                        <separator string="Cuenta de destino"/>
                    </group>
                    <group colspan="2">
                        <group>
                            <field name="account" options="{'no_create': True}" string="Cuenta*"/>
                        </group>
                        <group>
                            <field name="available" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <group colspan="2">
                        <separator string="Otros datos"/>
                    </group>
                    <group colspan="2">
                        <field name="active" widget="boolean_toggle"/>
                        <field name="note" widget="char"/>
                        <field name="invoice" widget="pdf_viewer"/>
                    </group>
                </group>
            </sheet>
        </form>
    </field>
    </record>
    <!-- Form view of cashmind.income model (end) -->
    
    <!-- Search view of cashmind.income model (start) -->
    <record id="cashmind_income_search_view" model="ir.ui.view">
        <field name="name">Cashmind income search view</field>
        <field name="model">cashmind.income</field>
        <field name="arch" type="xml">
            <search string="Buscar ingresos">
                <field name="name" string="por nombre"/>
                <field name="account" string="por cuenta de destino"/>
                <field name="category" string="por categoría"/>
                <field name="amount" string="por cantidad"/>
                <field name="date" string="por fecha"/>
                <field name="note" string="en las notas"/>
                <filter name="active_incomes" string="Activos" domain="[('active', '=', True)]"/>
                <filter name="inactive_incomes" string="Archivados" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="up_to_500" string="Hasta 500.00" domain="[('amount', '&lt;=', 500)]"/>
                <filter name="over_500" string="Más de 500.00" domain="[('amount', '>', 500)]"/>
                <separator/>
                <filter name="with_invoice" string="Con factura" domain="[('has_invoice', '=', True)]"/>
                <filter name="without_invoice" string="Sin factura" domain="[('has_invoice', '=', False)]"/>
                <group expand="1" string="Agrupar por">
                    <filter name="group_by_account" string="Cuenta de destino" context="{'group_by': 'account'}"/>
                    <separator/>
                    <filter name="group_by_category" string="Categoría" context="{'group_by': 'category'}"/>
                    <separator/>
                    <filter name="group_by_date" string="Fecha" context="{'group_by': 'date'}"/>
                    <separator/>
                    <filter name="group_by_currency" string="Tipo de moneda" context="{'group_by': 'currency_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Search view of cashmind.income model (end) -->

    <!-- Action of cashmind.income model (start) -->
    <record id="cashmind_income_action" model="ir.actions.act_window">
        <field name="name">INGRESOS</field>
        <field name="res_model">cashmind.income</field>
        <field name="view_mode">list,form</field>
    </record>
    <!-- Action of cashmind.income model (end) -->
</odoo>