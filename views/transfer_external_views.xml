<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Tree view of cashmind.transfer model (start) -->
    <record id="cashmind_transfer_external_tree_view" model="ir.ui.view">
        <field name="name">Cashmind transfer_external tree view</field>
        <field name="model">cashmind.transfer_external</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="source_account"/>
                <field name="external_user_id" string="Enviado a"/>
                <field name="destination_account"/>
                <field name="amount"/>
                <field name="source_currency_id"/>
                <field name="transfer_date"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="note"/>
            </list>
        </field>
    </record>
    <!-- Tree view of cashmind.transfer model (end) -->
    
    <!-- Form view of cashmind.transfer model (start) -->
    <record id="cashmind_transfer_external_form_view" model="ir.ui.view">
        <field name="name">Cashmind transfer_external form view</field>
        <field name="model">cashmind.transfer_external</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group colspan="2">
                            <separator string="Datos de la transferencia"/>
                            <field name="name" string="Nombre*"/>
                            <field name="amount" string="Cantidad*"/>
                            <field name="transfer_date" string="Fecha de la transferencia*"/>
                            <separator string="Cuenta de origen"/>
                        </group>
                        <group colspan="2">
                            <group>
                                <field name="source_account" options="{'no_create': True}" string="Cuenta de origen*"/>
                            </group>
                            <group>
                                <field name="available_source_balance"/>
                            </group>
                        </group>
                        <group colspan="2">
                            <field name="source_currency_id" invisible="1"/>
                            <separator string="Cuenta de destino"/>
                        </group>
                        <group colspan="2">
                            <group>
                                <field name="external_user_id" options="{'no_create': True}" string="Usuario*"/>
                                <field name="destination_account" options="{'no_create': True}" string="Cuenta de destino*"/>
                            </group>
                        </group>
                        <group colspan="2">
                            <field name="destination_currency_id" invisible="1"/>
                            <separator string="Otros datos"/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="note" nolabel="0"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Form view of cashmind.transfer model (end) -->

    <!-- Kanban view of cashmind.transfer model (start) -->
    <record id="cashmind_transfer_external_kanban_view" model="ir.ui.view">
        <field name="name">Cashmind transfer_external kanban view</field>
        <field name="model">cashmind.transfer_external</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="amount"/>
                <field name="transfer_date"/>
                <field name="source_account"/>
                <field name="source_currency_id"/>
                <field name="external_user_id"/>
                <field name="destination_account"/>

                <t t-name="card">
                    <div class="o_kanban_global_click">
                        <header class="d-flex justify-content-between mb-2">
                            <strong><t t-esc="record.name.value"/></strong>
                            <span class="text-muted"><t t-esc="record.transfer_date.value"/></span>
                        </header>
                        <div class="o_kanban_card_content mb-2 badge text-bg-primary fs-4">
                            <field name="amount"/>
                        </div>
                        <footer class="d-flex flex-column text-muted small">
                            <div class="d-flex">
                                <span>‚û°Ô∏è</span>
                                <field name="source_account"/>
                            </div>
                            <div class="d-flex">
                                <span>üéØ</span>
                                <field name="destination_account"/>
                                <span style="margin-left: 5px;">(üë§</span>
                                <field name="external_user_id"/>)
                            </div>
                        </footer>
                    </div>
                </t>
            </kanban>
        </field>
    </record>
    <!-- Kanban view of cashmind.transfer model (end) -->
    
    <!-- Search view of cashmind.transfer model (start) -->
    <record id="cashmind_transfer_external_search_view" model="ir.ui.view">
        <field name="name">Cashmind transfer_external search view</field>
        <field name="model">cashmind.transfer_external</field>
        <field name="arch" type="xml">
            <search string="Buscar transferencias">
                <field name="name" string="por nombre"/>
                <field name="source_account" string="por cuenta de origen"/>
                <field name="destination_account" string="por cuenta de destino"/>
                <field name="transfer_date" string="por fecha"/>
                <field name="note" string="en las notas"/>
                <filter name="active_transfer" string="Activas" domain="[('active', '=', True)]"/>
                <filter name="inactive_transfer" string="Archivadas" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="up_to_500" string="Hasta 500.00" domain="[('amount', '&lt;=', 500)]"/>
                <filter name="over_500" string="M√°s de 500.00" domain="[('amount', '>', 500)]"/>
                <group expand="1" string="Agrupar por">
                    <filter name="group_by_source_account" string="Cuenta de origen" context="{'group_by': 'source_account'}"/>
                    <filter name="group_by_destination_account" string="Cuenta de destino" context="{'group_by': 'destination_account'}"/>
                    <separator/>
                    <filter name="group_by_date" string="Fecha" context="{'group_by': 'transfer_date'}"/>
                    <separator/>
                    <filter name="group_by_currency" string="Tipo de moneda" context="{'group_by': 'source_currency_id'}"/>          
                </group>
            </search>
        </field>
    </record>
    <!-- Search view of cashmind.transfer model (end) -->

    <!-- Action of cashmind.transfer model (start) -->
    <record id="cashmind_external_transfer_action" model="ir.actions.act_window">
        <field name="name">TRANSFERENCIAS A CUENTA EXTERNA</field>
        <field name="res_model">cashmind.transfer_external</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('user_id', '=', uid)]</field>
    </record>
    <!-- Action of cashmind.transfer model (start) -->
</odoo>