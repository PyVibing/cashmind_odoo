<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Tree view of cashmind.budget model (start) -->
    <record id="cashmind_budget_tree_view" model="ir.ui.view">
        <field name="name">Cashmind budget tree view</field>
        <field name="model">cashmind.budget</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" width="300px"/>
                <field name="account" width="150"/>
                <field name="category" width="100px"/>
                <field name="amount" width="60px"/>
                <field name="expended" width="60"/>
                <field name="balance" width="60"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="start_date" string="Inicio" width="100px"/>
                <field name="end_date" string="Fin" width="100px"/>
                <field name="active" widget="boolean_toggle" width="30px"/>
                <field name="note" width="300px"/>
            </list>
        </field>
    </record>
    <!-- Tree view of cashmind.budget model (end) -->
    
    <!-- Form view of cashmind.budget model (start) -->
    <record id="cashmind_budget_form_view" model="ir.ui.view">
        <field name="name">Cashmind budget form view</field>
        <field name="model">cashmind.budget</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <separator string="Datos del presupuesto"/>
                        <field name="name" string="Nombre*"/>
                        <field name="account" options="{'no_create': True}" string="Cuenta asociada*"/>
                        <field name="available"/>
                        <field name="category" options="{'no_create': True}" string="Categoría*"/>
                        <field name="currency_id" invisible="1" force_save="1"/>
                        <field name="amount" string="Cantidad*"/>
                        <field name="expended" readonly="1"/>
                        <field name="balance" readonly="1"/>
                        <separator string="Período"/>
                        <field name="start_date" string="Fecha de inicio*"/>
                        <field name="end_date" string="Fecha de finalización*"/>
                        <separator string="Otros datos"/>
                        <field name="active" widget="boolean_toggle"/>
                        <field name="note"/>
                    </group>
                    <notebook>
                        <page string="Gastos">
                            <field name="expense_ids">
                                <list>
                                    <field name="name" width="150"/>
                                    <field name="category" width="40"/>
                                    <field name="amount" width="10"/>
                                    <field name="currency_id" width="10"/>
                                    <field name="date" width="40"/>
                                    <field name="invoice" width="20"/>
                                    <field name="note" width="180"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Form view of cashmind.budget model (end) -->
    
    <!-- Kanban view of cashmind.budget model (start) -->
    <record id="cashmind_budget_kanban_view" model="ir.ui.view">
        <field name="name">Cashmind budget kanban view</field>
        <field name="model">cashmind.budget</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="amount"/>
                <field name="expended"/>
                <field name="balance"/>
                <field name="currency_id"/>
                <field name="category"/>
                <field name="start_date"/>
                <field name="end_date"/>

                <t t-name="card">
                    <div class="o_kanban_global_click">
                        <header class="d-flex justify-content-between mb-2">
                            <strong><t t-esc="record.name.value"/></strong>
                            <span class="text-muted"><t t-esc="record.start_date.value"/></span>
                        </header>
                        <div class="d-flex flex-column mb-2">
                            <div class="d-flex">
                                <span class="badge text-bg-success fs-4"><field name="balance"/></span>
                            </div>
                            <div class="d-flex align-items-center">
                                <span class="text-muted">Reservado:</span>
                                <span class="text-primary ms-1 me-3"><field name="amount"/></span>                                
                                <span class="text-muted">Gastado:</span>
                                <span class="text-danger ms-1"><field name="expended"/></span>
                            </div>
                        </div>
                        <footer class="d-flex flex-column text-muted small">
                            <div class="d-flex">
                                <span>🏷️</span>
                                <field name="category"/>
                            </div>
                            <div class="d-flex text-danger">
                                <span>🗓️</span>
                                <field name="end_date"/>
                            </div>
                        </footer>
                    </div>
                </t>
            </kanban>
        </field>
    </record>
    <!-- Kanban view of cashmind.budget model (end) -->

    <!-- Search view of cashmind.budget model (start) -->
    <record id="cashmind_budget_search_view" model="ir.ui.view">
        <field name="name">Cashmind budget search view</field>
        <field name="model">cashmind.budget</field>
        <field name="arch" type="xml">
            <search string="Buscar presupuestos">
                <field name="name" string="por nombre"/>
                <field name="account" string="por cuenta asociada"/>
                <field name="category" string="por categoría"/>
                <field name="start_date" string="por fecha de inicio"/>
                <field name="end_date" string="por fecha de finalización"/>
                <field name="note" string="en las notas"/>
                <filter name="active_budgets" string="Activos" domain="[('active', '=', True)]"/>
                <filter name="inactive_budgets" string="Archivados" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="up_to_500" string="Reservado hasta 500.00" domain="[('amount', '&lt;=', 500)]"/>
                <filter name="over_500" string="Reservado más de 500.00" domain="[('amount', '>', 500)]"/>
                <separator/>
                <filter name="with_availability" string="Con disponibilidad" domain="[('balance', '>', 0)]"/>
                <filter name="without_availability" string="Sin disponibilidad" domain="[('balance', '=', 0)]"/>
                <separator/>
                <group expand="1" string="Agrupar por">
                    <filter name="group_by_category" string="Categoría" context="{'group_by': 'category'}"/>
                    <separator/>
                    <filter name="group_by_account" string="Cuenta asociada" context="{'group_by': 'account'}"/>
                    <separator/>
                    <filter name="group_by_currency" string="Tipo de moneda" context="{'group_by': 'currency_id'}"/>
                </group>

            </search>
        </field>
    </record>
    <!-- Search view of cashmind.budget model (end) -->

    <!-- Action of cashmind.budget model (start) -->
    <record id="cashmind_budget_action" model="ir.actions.act_window">
        <field name="name">PRESUPUESTOS</field>
        <field name="res_model">cashmind.budget</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{
            "search_default_with_availability": 1
        }</field>
        <field name="domain">[('user_id', '=', uid)]</field>
    </record>
    <!-- Action of cashmind.budget model (end) -->
</odoo>