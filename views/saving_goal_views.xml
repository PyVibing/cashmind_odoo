<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Tree view of cashmind.savinggoal model (start) -->
    <record id="cashmind_savinggoal_tree_view" model="ir.ui.view">
        <field name="name">Cashmind savinggoal tree view</field>
        <field name="model">cashmind.savinggoal</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" width="300px"/>
                <field name="amount" width="60px"/>
                <field name="currency_id" width="60px"/>
                <field name="limit_date" width="100px"/>
                <field name="balance" width="75px"/>
                <field name="percent_for_bar" string="" readonly="1" width="75"/>
                <field name="reached_percent_str" width="160px"/>
                <field name="active" widget="boolean_toggle" width="30px"/>
                <field name="note" width="300px"/>
            </list>
        </field>
    </record>
    <!-- Tree view of cashmind.savinggoal model (end) -->
    
    <!-- Form view of cashmind.savinggoal model (start) -->
    <record id="cashmind_savinggoal_form_view" model="ir.ui.view">
        <field name="name">Cashmind savinggoal form view</field>
        <field name="model">cashmind.savinggoal</field>
        <field name="arch" type="xml">
            <form>
                <sheet> 
                    <group>
                        <separator string="Datos de la meta de ahorro"/>
                        <field name="name" string="Nombre*"/>
                        <field name="currency_id" string="Moneda*" options="{'no_create': True}"/>
                        <field name="amount" string="Objetivo*"/>
                        <field name="balance"/>
                        <separator string="Per√≠odo"/>
                        <field name="start_date" string="Fecha de inicio*"/>
                        <field name="limit_date" string="Fecha l√≠mite*"/>
                        <separator string="Otros datos"/>
                        <field name="active" widget="boolean_toggle"/>
                        <field name="note"/>
                    </group>
                    <notebook>
                        <page string="Ahorros recibidos">
                            <field name="save_ids" context="{'from_save_inline': True}">
                                <list>
                                    <field name="name" width="150"/>
                                    <field name="source_account" width="150"/>
                                    <field name="amount" width="20"/>
                                    <field name="source_currency_id" width="20"/>
                                    <field name="date" width="20"/>
                                    <field name="note" width="250"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Form view of cashmind.savinggoal model (end) -->
    
    <!-- Kanban view of cashmind.savinggoal model (start) -->
    <record id="cashmind_savinggoal_kanban_view" model="ir.ui.view">
        <field name="name">Cashmind savinggoal kanban view</field>
        <field name="model">cashmind.savinggoal</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="balance"/>
                <field name="start_date"/>
                <field name="limit_date"/>
                <field name="reached_percent"/>

                <t t-name="card">
                    <div class="o_kanban_global_click">
                        <header class="d-flex justify-content-between mb-2">
                            <strong><t t-esc="record.name.value"/></strong>
                            <span class="text-muted"><t t-esc="record.start_date.value"/></span>
                        </header>
                        <div class="d-flex mb-2">
                            <field name="amount" class="badge text-bg-primary fs-4"/>
                        </div>
                        <footer class="d-flex flex-column text-muted small">
                            <div class="d-flex">
                                <span>üí∞</span>
                                <span class="text-success ms-1"><field name="balance"/></span>
                            </div>
                            <div class="d-flex">
                                <span>üìà</span>
                                <span class="ms-1"><field name="reached_percent"/></span><span class="ms-1">%</span>
                            </div>
                            <div class="d-flex">
                                <span>üóìÔ∏è</span>
                                <span class="text-danger ms-1"><field name="limit_date"/></span>
                            </div>                                
                        </footer>
                    </div>
                </t>
            </kanban>
        </field>
    </record>
    <!-- Kanban view of cashmind.savinggoal model (end) -->
    
    <!-- Search view of cashmind.savinggoal model (start) -->
    <record id="cashmind_savinggoal_search_view" model="ir.ui.view">
        <field name="name">Cashmind savinggoal search view</field>
        <field name="model">cashmind.savinggoal</field>
        <field name="arch" type="xml">
            <search string="Buscar metas de ahorro">
                <field name="name" string="por nombre"/>
                <field name="amount" string="por objetivo"/>
                <field name="balance" string="por ahorrado"/>
                <field name="start_date" string="por fecha de inicio"/>
                <field name="limit_date" string="por fecha l√≠mite"/>
                <field name="note" string="en las notas"/>
                <filter name="active_savinggoals" string="Activos" domain="[('active', '=', True)]"/>
                <filter name="inactive_savinggoals" string="Archivados" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="completed" string="Completadas" domain="[('goal_completed', '=', True)]"/>
                <filter name="incompleted" string="Sin completar" domain="[('goal_completed', '=', False)]"/>
                <separator/>
                <filter name="up_to_500" string="Objetivo hasta 500.00" domain="[('amount', '&lt;=', 500)]"/>
                <filter name="over_500" string="Objetivo mayor que 500.00" domain="[('amount', '>', 500)]"/>
                <separator/>
                <filter name="with_savings" string="Con ahorros" domain="[('balance', '>', 0)]"/>
                <filter name="without_savings" string="Sin ahorros" domain="[('balance', '=', 0)]"/>
                <group expand="1" string="Agrupar por">
                    <filter name="group_by_date" string="Fecha l√≠mite" context="{'group_by': 'limit_date'}"/>
                    <separator/>
                    <filter name="group_by_currency" string="Tipo de moneda" context="{'group_by': 'currency_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Search view of cashmind.savinggoal model (end) -->

    <!-- Action of cashmind.savinggoal model (start) -->
    <record id="cashmind_savinggoal_action" model="ir.actions.act_window">
        <field name="name">METAS DE AHORRO</field>
        <field name="res_model">cashmind.savinggoal</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{
            "search_default_incompleted": True    
        }</field>
        <field name="domain">[('user_id', '=', uid)]</field>
    </record>
    <!-- Action of cashmind.savinggoal model (end) -->
</odoo>